<%= form_with(model: service, local: true) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :name, class: 'form-control', placeholder: true, required: true %>
  </div>

  <div class="form-group">
    <%= form.number_field :price, class: 'form-control', placeholder: true, required: true %>
  </div>

  <div class="form-group">
    <%= form.text_field :description, class: 'form-control', placeholder: true %>
  </div>

   <div class="form-group">   
      <%= form.label :icon %>
      <p><%= image_tag(service.icon.url, size: '100', alt: 'Фото статьи') if service.icon? %></p>
      <%= form.file_field :icon, accept: 'image/png,image/gif,image/jpeg' %>
   </div>

  <div class="form-group">
    <%= form.number_field :stype, class: 'form-control', placeholder: true, required: true %>
  </div>

  <div class="form-group">
    <%= form.number_field :durationinminutes, class: 'form-control', placeholder: true, required: true %>
  </div>

  <div class="form-group">
    <%= form.text_field :amountofvisits, class: 'form-control', placeholder: true, required: true %>
  </div>

  <div class="form-group">
    <%= form.text_field :string, class: 'form-control', placeholder: true, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
