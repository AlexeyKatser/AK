
<div class="overlay_popup"></div>
<div class ='popup container col-md-4' id='popup1'>
	<%= render partial: 'requests/form', locals: {new_request: Request.new, mode: 2 } %>
</div>
<div class='container' id='notes'>
	<div class='row'>
		<h3 style="text-align: center;">Список статей</h3>
		<div clas='col-lg-3 col-md-3 col-sm-2 col-1 '>
			<%= render partial: "notes/note", collection: Note.last(3) %>	
		</div>
	</div>
</div>

<div class='container' id='services'>
	<div class='row'>
		<% Service.last(3).each do |serv| %>
			<div class="col-md-3">
				<%= render partial: 'services/service', locals: {service: serv } %>
			</div>
		<% end %>
	</div>
</div>


<div class="container" id='request'>
	<div class='row'>
		<div class="col-md-3"></div>
		<div class="background-image col-md-6 col-lg-6 col-sm-7">
			<%= render partial: 'requests/form', locals: {new_request: Request.new, mode: 1 } %>
		</div>
	</div>
</div>


