<div class='container mt-20'>
	<div id="carousel" class="carousel slide">
		  <ol class="carousel-indicators">
		    <li data-target="#carousel" data-slide-to="0" class="active"></li>
		    <li data-target="#carousel" data-slide-to="1"></li>
		    <li data-target="#carousel" data-slide-to="2"></li>
		  </ol>
	 	<div class="carousel-inner" role="listbox">
	 		<div class="item">
	      		<img src="6971684074_6a9d451201_k.jpg" alt="First slide" class='carousel-img'>
	    	</div>
	    	<div class="item active">
	    		<img src="2.png" alt="Second slide" class='carousel-img'>
	      		<div class="carousel-caption">
        			Second slide caption
      	   		</div>
	    	</div>
	    	<div class="item">
	      		<img src="3.png" alt="Third slide" class='carousel-img'>
	    	</div>
	  	</div>
	    <a href="#carousel" class="left carousel-control" role="button" data-slide="prev">
	    	<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
	    </a>
	    <a href="#carousel" class="right carousel-control" role="button" data-slide="next">
	    	<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
	    </a>
	</div>
</div>

<div class='container mt-20' id='notes'>
	<div class='row'>
		<h3 style="text-align: center;">Список статей</h3>
		
			<%= render partial: "notes/note", collection: Note.last(3) %>	
		</div>
	</div>
</div>

<div class='container mt-20' id='services'>
	<div class='row'>
		<% Service.last(3).each do |serv| %>
			<div class="col-md-4 col-sm-5 col-12" >
				<%= render partial: 'services/service', locals: {service: serv } %>
			</div>
		<% end %>
	</div>
</div>

<div class="container mt-20" id='request' style="margin-top: 20px ">
	<div class='row'>
		<div class="col-md-3 col-sm-3"></div>
		<div class="background-image col-md-6 col-lg-6 col-sm-7">
			<%= render partial: 'requests/form', locals: {new_request: Request.new, mode: 1 } %>
		</div>
	</div>
</div>


