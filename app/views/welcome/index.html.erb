<div class='container my-3' id='notes'>
	<div class="global__box">
		<div class='row justify-content-center'>
			<div class="global__box_title">Статьи</div>
			
				<%= render partial: "notes/note", collection: Note.last(3) %>	
		</div>
		<div class="d-flex justify-content-end mt-3">
			<%= link_to 'Все статьи', notes_path, class: 'link_to_all btn btn-light' %>
		</div>
	</div>
</div>

<div class='container my-3' id='services'>
	<div class="global__box">
		<div class='row justify-content-center'>
			<div class="global__box_title">Услуги</div>
				<% Service.last(3).each do |serv| %>
				<div class="col-md-4 col-sm-6 col-xs-12 col-12" >
					<%= render partial: 'services/service', locals: {service: serv } %>
				</div>
			<% end %>
		</div>
		<div class="d-flex justify-content-end mt-3">
			<%= link_to 'Все услуги', services_path, class: 'link_to_all btn btn-light' %>
		</div>
	</div>
</div>

<div class="container my-3" id='request' style="margin-top: 20px ">
	<div class='row justify-content-center'>
	
		<div class="global__box", style="max-width: 500px"> 
			<%= render partial: 'requests/form', locals: {new_request: Request.new, mode: 1 } %>
		</div>
	</div>
</div>


