<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
<%= form_for new_request do |f| %>
	<%= render partial: 'partials/form_errors', locals: {model: new_request} %>
	<div class="lead text-center">Записаться на консультацию</div>
  <div class="form-group">   
   	 	<%= f.text_field :name, class: 'form-control', placeholder: true, required: true %>
      <div class="error-box"></div>
  	</div>
	<div class="form-group">
   	 	<%= f.telephone_field :phone, class: 'form-control', placeholder: true %>
      <div class="error-box"></div>
  	</div>
  <div class='form-group'>Дата и время:
    <%= f.datetime_select :preferedTime, class: 'form-control', placeholder: true %>
    <div class="error-box"></div>
  </div>
	<div class="form-group">
   	 	<%= f.text_area :text, size: "60x2", class: 'form-control', placeholder: true %>
      <div class="error-box"></div>
  	</div>
  <div class="actions" align='center'>
    <%= f.submit 'Записаться', id: 'submit-request', class: 'btn btn-primary' %>
  </div>
<% end %>
