<%= form_for new_request do |f| %>
	<%= render partial: 'partials/form_errors', locals: {model: new_request} %>
	<div class="lead text-center">Записать на консультацию</div>
  <div class="form-group">   
   	 	<%= f.text_field :name, class: 'form-control', placeholder: true %>
  	</div>
	<div class="form-group">
   	 	<%= f.text_field :phone, class: 'form-control', placeholder: true %>
  	</div>
	<div class="form-group">
   	 	<%= f.text_area :text, size: "60x2", class: 'form-control', placeholder: true %>
  	</div>
  <div class="actions" align='center'>
    <%= f.submit 'Отправить', class: 'btn btn-primary' %>
  </div>
<% end %>
