<div class="navbar navbar-default  navbar-main ">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">

    </button>
    <%= link_to t('app.name'), root_path, class: 'navbar-brand' %>
